<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.simple.android.modle.annotation.MyAndroidAnnotationsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/my_intruduction"
        style="@style/baseItemStyle"
        android:layout_height="wrap_content"
        android:text="AndroidAnnotations是一个能够让你快速进行Android开发的开源框架"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_toolbar" />



    <TextView
        android:id="@+id/my_features"
        style="@style/baseItemStyle"
        android:layout_height="wrap_content"
        android:text="1、使用依赖注入（Dependency Injection）可以注入views,extras,system service,resource等等"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_intruduction"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/my_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/my_features"
        android:text="点击"/>

</android.support.constraint.ConstraintLayout>