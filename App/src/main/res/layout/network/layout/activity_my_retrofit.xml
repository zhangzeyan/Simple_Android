<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.simple.android.network.retrofit.MyRetrofitActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/my_only_retrofit"
        style="@style/baseItemStyle"
        android:onClick="clickMyOnlyRetrofit"
        android:text="1. 只使用Retrofit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_toolbar" />

    <TextView
        android:id="@+id/my_retrofit_rxjava"
        style="@style/baseItemStyle"
        android:onClick="clickMyRetrofitRxjava"
        android:text="2. Retrofit与Rxjava结合"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_only_retrofit" />

</android.support.constraint.ConstraintLayout>