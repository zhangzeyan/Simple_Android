<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.simple.android.network.MyNetWorkActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/my_asynctask"
        style="@style/baseItemStyle"
        android:onClick="clickMyAsyncTask"
        android:text="1. AsyncTask使用"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_toolbar" />

    <TextView
        android:id="@+id/my_asynchttp"
        style="@style/baseItemStyle"
        android:text="2. AsyncHttp使用"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_asynctask" />

    <TextView
        android:id="@+id/my_volley"
        style="@style/baseItemStyle"
        android:onClick="clickMyVolley"
        android:text="3. Volley使用"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_asynchttp" />

    <TextView
        android:id="@+id/my_okhttp"
        style="@style/baseItemStyle"
        android:onClick="clickMyOkhttp"
        android:text="3. Okhttp使用"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_volley" />

    <TextView
        android:id="@+id/my_retrofit"
        style="@style/baseItemStyle"
        android:onClick="clickMyRetrofit"
        android:text="4. Retrofit使用"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_okhttp" />


</android.support.constraint.ConstraintLayout>
