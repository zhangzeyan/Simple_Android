<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".system.permission.MyPerMission2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/my_permisstionGen"
        style="@style/baseItemStyle"
        android:onClick="clickMyPermisstionGen"
        android:text="使用PermissionGen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_toolbar" />



    <TextView
        android:id="@+id/my_permisstionDispatcher"
        style="@style/baseItemStyle"
        android:onClick="clickMyPermisstionDispatcher"
        android:text="使用PermissionDispatcher"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_permisstionGen" />


</android.support.constraint.ConstraintLayout>